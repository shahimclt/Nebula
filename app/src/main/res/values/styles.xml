<resources>
    <style name="ShapeAppearance.App.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="IconButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/selector_icon_btn</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="IconButton.DayNight">
        <item name="materialThemeOverlay">@style/ThemeOverlay.DayNight</item>
    </style>
    <style name="ThemeOverlay.DayNight" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
    </style>

</resources>
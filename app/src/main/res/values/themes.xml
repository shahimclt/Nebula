<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Nebula" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!--        For transitions -->
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Widget.Nebula.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.Nebula.ToolbarTitle</item>
    </style>

    <style name="Widget.Nebula.Toolbar.Transparent" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.Nebula.ToolbarTitle</item>
        <item name="android:background">@color/colorBackground</item>
        <!--        <item name="materialThemeOverlay">@style/ThemeOverlay.Nebula.Toolbar</item>-->
    </style>

    <style name="TextAppearance.Nebula.ToolbarTitle" parent="TextAppearance.Nebula.Headline6">
        <item name="fontFamily">@font/roboto_mono_bold</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ThemeOverlay.Nebula.Toolbar" parent="">
<!--        <item name="colorPrimary">@color/colorSurface</item>-->
<!--        <item name="colorPrimaryVariant">@color/colorSecondarySurface</item>-->
<!--        <item name="colorOnPrimary">@color/colorOnSurface</item>-->
    </style>

    <style name="Theme.Nebula.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nebula.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>